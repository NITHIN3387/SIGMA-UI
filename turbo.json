{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "db:migrate:deploy": {},
    "db:push": {},
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "generate": {
      "dependsOn": ["^generate"]
    }
  },
  "globalDependencies": [
    "NEXT_PUBLIC_CLIENT_URL_DEV",
    "NEXT_PUBLIC_CLIENT_URL_PROD",
    "DEV_CLIENT_ID",
    "DEV_CLIENT_SECRET",
    "DEV_REDIRECT_URI",
    "PROD_CLIENT_ID",
    "PROD_CLIENT_SECRET",
    "PROD_REDIRECT_URI",
    "DATABASE_URL",
    "NODE_ENV"
  ]
}
